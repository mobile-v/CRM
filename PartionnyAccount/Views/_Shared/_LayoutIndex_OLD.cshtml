<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy">

    <title>Сервисный центр: сервисный, торговый и складской учет оналйн</title>
    <base href="/">

    <!--как отключить кэширование javascript-->
    <meta http-equiv="Cache-control" content="no-cache">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">

    <!--Загрузка данных-->
    <link href="~/Scripts/sklad/css/loader.css" rel="stylesheet" />
    <!--Изменения в дизайне фреймворка-->
    <link href="~/Scripts/sklad/css/change.css" rel="stylesheet" />



    <script type="text/javascript">
        //Variable for Interface
        //1 - Windows, 2 - Tabs, 3 - Panels
        var InterfaceSystem = 1;
        var InterfaceSystemObjName = "Ext.Window";
        //Variable for Theme
        var DefaultButtonUI = "default-toolbar";
        var varBodyPadding = 0;
    </script>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <script type="text/javascript" src="~/Scripts/sklad/jsDesktop6/build/ext-all.js"></script>

    <!-- Theme -->
    @if (ViewData["CookieT"].ToString() == "2")
    {
        <link rel="stylesheet" type="text/css" href="~/Scripts/sklad/jsDesktop6/build/classic/theme-neptune/resources/theme-neptune-all.css">
        <script type="text/javascript" src="~/Scripts/sklad/jsDesktop6/build/classic/theme-neptune/theme-neptune.js"></script>

        <script type="text/javascript">DefaultButtonUI = "default";</script>
    }
    else if (ViewData["CookieT"].ToString() == "3")
    {
        <link rel="stylesheet" type="text/css" href="~/Scripts/sklad/jsDesktop6/build/classic/theme-neptune-touch/resources/theme-neptune-touch-all.css">
        <script type="text/javascript" src="~/Scripts/sklad/jsDesktop6/build/classic/theme-neptune-touch/theme-neptune-touch.js"></script>

        <script type="text/javascript">    DefaultButtonUI = "default"; varBodyPadding = 15;</script>
    }
    else if (ViewData["CookieT"].ToString() == "4")
    {
        <link rel="stylesheet" type="text/css" href="~/Scripts/sklad/jsDesktop6/build/classic/theme-triton/resources/theme-triton-all.css">
        <script type="text/javascript" src="~/Scripts/sklad/jsDesktop6/build/classic/theme-triton/theme-triton.js"></script>

        <script type="text/javascript">DefaultButtonUI = "default"; varBodyPadding = 15;</script>
    }
    else
    {
        <link rel="stylesheet" type="text/css" href="~/Scripts/sklad/jsDesktop6/build/classic/theme-gray/resources/theme-gray-all.css">
        <script type="text/javascript" src="~/Scripts/sklad/jsDesktop6/build/classic/theme-gray/theme-gray.js"></script>

        <script type="text/javascript">DefaultButtonUI = "default-toolbar";</script>
    }

    <!-- Interface -->
    @if (ViewData["CookieI"].ToString() == "2")
    {
        <script type="text/javascript">    InterfaceSystem = 2; InterfaceSystemObjName = "Ext.panel.Panel";</script>
    }
    else if (ViewData["CookieI"].ToString() == "3")
    {
        <script type="text/javascript">InterfaceSystem = 3; InterfaceSystemObjName = "Ext.panel.Panel";</script>
    }
    else
    {
        <script type="text/javascript">InterfaceSystem = 1; InterfaceSystemObjName = "Ext.Window";</script>
    }

    <!-- Language -->
    @if (ViewData["CookieL"].ToString() == "2")
    {
        <script src="~/Content/other/Language/LanguageUa.js"></script>
    }
    else if (ViewData["CookieL"].ToString() == "4")
    {
        <script src="~/Content/other/Language/LanguageUs.js"></script>
    }
    else
    {
        <script src="~/Content/other/Language/LanguageRu.js"></script>
    }


    <!-- Function -->
    <script src="~/Content/other/Function/Function.js"></script>



    <!-- KKM -->
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>   <!-- Замените путь к библиотеке на своем сайте -->
    <script src="https://github.com/Krinkle/jquery-json/releases/download/v2.5.1/jquery.json.min.js"></script>  <!-- Замените путь к библиотеке на своем сайте -->
    <script src="~/Content/kkm/Function/FunctionProj.js"></script>
    <!-- KKM -->


    @RenderBody()


</head>
<body>

    <div id="loading-mask"></div>
    <div id="loading">
        <div class="loading-indicator">
            "Учет в Торговле и Сервисном центре" загружается ...
        </div>
    </div>

</body>
</html>